{
  "compilerOptions": {
    "moduleResolution": "Node16",
    "module": "ESNext",
    "target": "ES2021",
    "skipLibCheck": true,
    "noEmit": true,
    /* Bundler mode */
    "esModuleInterop": true,
    /* Linting */
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["*.ts", ".eslintrc.cjs"]
}
